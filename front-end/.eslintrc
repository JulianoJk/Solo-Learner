{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "strict": ["error", "never"],
    "valid-typeof": "error",
    "no-unsafe-negation": "error",
    "no-unused-vars": "off",
    "no-unexpected-multiline": "error",
    "@typescript-eslint/no-unused-vars": ["error"],

    "no-undef": "error"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": ["@typescript-eslint"]
}
